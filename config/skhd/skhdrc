#  Changing Layout
ctrl + cmd - e : yabai -m space --layout bsp
ctrl + cmd - s : yabai -m space --layout float

# Changing Window Focus
ctrl + cmd - j : yabai -m window --focus south
ctrl + cmd - k : yabai -m window --focus north
ctrl + cmd - h : yabai -m window --focus west
ctrl + cmd - l : yabai -m window --focus east

# Change focus between displays
ctrl + cmd - s : yabai -m display --focus west
ctrl + cmd - g : yabai -m display --focus east

# Modifying the Layout

# rotate layout clockwise
ctrl + cmd - r : yabai -m space --rotate 270
# flip along y-axis
ctrl + cmd - y : yabai -m space --mirror y-axis
# flip along x-axis
ctrl + cmd - x : yabai -m space --mirror x-axis
# toggle window float
ctrl + cmd - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# Modifying Window Size

# maximize a window
ctrl + cmd - m : yabai -m window --toggle zoom-fullscreen
# balance out tree of windows (resize to occupy same area)
ctrl + cmd - e : yabai -m space --balance

# Moving Windows Around

# swap windows
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - h : yabai -m window --swap west
shift + alt - l : yabai -m window --swap east

# move window and split
ctrl + alt - j : yabai -m window --warp south
ctrl + alt - k : yabai -m window --warp north
ctrl + alt - h : yabai -m window --warp west
ctrl + alt - l : yabai -m window --warp east

# move window to display left and right
shift + alt - s : yabai -m window --display west; yabai -m display --focus west;
shift + alt - g : yabai -m window --display east; yabai -m display --focus east;

# Move Window To A Space (Desktop/Workspace)

#move window to prev and next space
shift + alt - p : yabai -m window --space prev;
shift + alt - n : yabai -m window --space next;

# move window to space #
shift + alt - 1 : yabai -m window --space 1;
shift + alt - 2 : yabai -m window --space 2;
shift + alt - 3 : yabai -m window --space 3;
shift + alt - 4 : yabai -m window --space 4;
shift + alt - 5 : yabai -m window --space 5;
shift + alt - 6 : yabai -m window --space 6;
shift + alt - 7 : yabai -m window --space 7;
shift + alt - 8 : yabai -m window --space 8;
shift + alt - 9 : yabai -m window --space 9;
shift + alt - 0 : yabai -m window --space 10;

# focus space
ctrl - 1 : yabai -m space --focus 1;
ctrl - 2 : yabai -m space --focus 3;
ctrl - 3 : yabai -m space --focus 3;
ctrl - 4 : yabai -m space --focus 4;
ctrl - 5 : yabai -m space --focus 5;
ctrl - 6 : yabai -m space --focus 6;
ctrl - 7 : yabai -m space --focus 7;
ctrl - 8 : yabai -m space --focus 8;
ctrl - 9 : yabai -m space --focus 9;
ctrl - 0 : yabai -m space --focus 10;
ctrl + cmd - n : yabai -m space --focus next;
ctrl + cmd - p : yabai -m space --focus prev;

# stop/start/restart yabai
ctrl + alt - q : yabai --stop-service
ctrl + alt - s : yabai --start-service
ctrl + alt - r : yabai --restart-service

# App shortcuts 
ctrl + shift - a : open -a 'Arc'
ctrl + shift - d : open -a 'Dia'
ctrl + shift - i : open -a 'Ghostty'
ctrl + shift - j : open -a 'IntelliJ IDEA Ultimate 2023.3.8.app'
