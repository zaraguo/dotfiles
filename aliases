alias ls="ls -G"
alias ll="ls -lG"
alias la="ls -aG"
alias mkdir="mkdir -p"
alias e="$EDITOR"
alias subl="open -a 'Sublime Text 2'"
alias st="open -a 'SourceTree'"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Include custom aliases
[[ -f ~/.aliases.local  ]] && source ~/.aliases.local
